<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.teachertipsforparents.bullybx.activities.ReportBullyingActivity"
                android:background="@drawable/chalkboard">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/nameOfVictimSelected"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/grey_background"
                android:hint="Name of victim..."
                android:padding="5dp"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/nameOfAllegedBullySelected"
                android:layout_below="@+id/nameOfVictimSelected"
                android:layout_centerHorizontal="true"
                android:background="@drawable/grey_background"
                android:hint="Name of alleged bully..."
                android:padding="5dp"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameOfAllegedBullySelected"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/locationEditText"
                    android:layout_weight="1"
                    android:background="@drawable/grey_background"
                    android:padding="5dp"
                    android:hint="Location..."
                    android:layout_margin="10dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/dateAndTimeEditText"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/grey_background"
                    android:hint="Date/Time..."
                    android:padding="5dp"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/wittnesesssSelected"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/grey_background"
                android:layout_margin="10dp"
                android:hint="Witnesses..."
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/moreInfoTextSected"
                android:layout_below="@+id/wittnesesssSelected"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/grey_background"
                android:hint="Please further describe the incident(s)..."
                android:gravity="top"
                android:padding="5dp"/>

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/attatchImageButton"
                android:layout_below="@+id/moreInfoTextSected"
                android:layout_centerHorizontal="true"
                android:background="#00ffffff"
                android:src="@drawable/paperclip"/>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/imageViewForSelected"
                android:layout_below="@+id/moreInfoTextSected"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Bullying"
                android:id="@+id/reportBullyingButton"
                android:layout_below="@+id/attatchImageButton"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/red_background"
                android:padding="10dp"
                android:textColor="#fff"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
